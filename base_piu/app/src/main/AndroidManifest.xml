<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.base_piu">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-feature android:name="android.hardware.camera"/>
    <uses-feature android:name="android.hardware.camera.autofocus"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_pump"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_pump"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.SignUpActivity"/>
        <activity android:name=".activity.LoginActivity"/>
        <activity android:name=".activity.PasswordResetActivity"/>
        <activity android:name=".activity.MemberActivity"/>
        <activity android:name=".activity.CameraActivity"/>
        <activity android:name=".activity.GalleryActivity"/>
    </application>

</manifest>